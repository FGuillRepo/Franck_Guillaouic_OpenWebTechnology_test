<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <data>
                <variable name="book" type="com.guillaouic.test.model.bookModel.Item"/>
        </data>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/card_view"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/beige">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/image"/>
                  <!--  app:loadImage="@{book.volumeInfo.imageLinks.thumbnail}"-->
                 />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:layout_below="@+id/image"
                    android:elevation="5dp"
                    android:padding="2dp"
                    android:clickable="false">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/title"
                            android:text="@{book.id}"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/black"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/language"
                            android:text="@{book.volumeInfo.publisher}"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="10dp"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/black"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/watcher"
                            android:text="@{book.volumeInfo.title}"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:paddingBottom="5dp"
                            android:textSize="@dimen/textsize16"
                            android:textColor="@color/black"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/title" />

                </RelativeLayout>
        </RelativeLayout>
</layout>